<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type="com.calclab.emite.xfunctional.client.ui.EmiteTesterPanel.TestStyles">
			.title {
				font-size: 200%;
				padding: 0.2em;
			}
			
			.app {
				margin: 1em solid #efefef;
			}
			
			.output {
				padding: 0.5em;
			}
			
			.box {
				border: 3px solid #efefef;
				background-color: white;
			}
			
			.boxHeader {
				background-color: #efefef;
				font-weight: bold;
			}
			
			.info {
				color: #00c;
			}
			
			.debug {
				color: gray;
			}
			
			.fail {
				color: #c00;
			}
			
			.success {
				color: #0c0;
			}
		</ui:style>
	<g:DockLayoutPanel unit='EM' styleName="{style.app}">
		<g:north size='3'>
			<g:Label styleName="{style.title}">Emite Functional Test Runner</g:Label>
		</g:north>
		<g:north size="2">
			<g:FlowPanel>
				<g:Button>Run all</g:Button>
				<g:Button>Clear all</g:Button>
			</g:FlowPanel>
		</g:north>

		<g:west size='16'>
			<g:FlowPanel styleName="{style.box}">
				<g:Label styleName="{style.boxHeader}">Tests</g:Label>
				<g:FlowPanel ui:field="tests" styleName="{style.output}">

				</g:FlowPanel>
			</g:FlowPanel>
		</g:west>

		<g:center>
			<g:FlowPanel styleName="{style.box}">
				<g:Label styleName="{style.boxHeader}">Output</g:Label>
				<g:ScrollPanel>
					<g:FlowPanel ui:field="output" styleName="{style.output}">
					</g:FlowPanel>

				</g:ScrollPanel>
			</g:FlowPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 